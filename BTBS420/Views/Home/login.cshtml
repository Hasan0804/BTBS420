@model BTBS420.Models.LoginViewModel

@{
    Layout = null; // Sayfa düzeni kullanmayacağız
}

<!DOCTYPE html>
<html>
<head>
    <title>Giriş Yap</title>
</head>
<body>
    <div class="container">
        <h2>Giriş Yap</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="Email" class="control-label col-md-2">E-Posta:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Posta adresinizi girin" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label col-md-2">Şifre:</label>
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrenizi girin" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Şifremi Unuttum", "ForgotPassword", "Account", new { }, new { @class = "btn btn-link" })
            </div>
        </div>
    </div>
</body>
</html>
